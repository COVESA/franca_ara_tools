<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="commands" name="Franca Ara Connector Console Commands" schema="schema/commands.exsd"/>
   <extension-point id="optionGroups" name="Franca Ara Connector Console Option Groups" schema="schema/optionGroups.exsd"/>
   <extension-point id="options" name="Franca Ara Connector Console Options" schema="schema/options.exsd"/>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.franca.connectors.ara.console.internal.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.franca.connectors.ara.console.application"
            name="Franca Ara Connector Code Generator">
         <property
               name="appName"
               value="Franca Ara Connector Code Generator">
         </property>
      </product>
   </extension>
   <extension
         point="org.franca.connectors.ara.console.commands">
      <command
            class="org.franca.connectors.ara.console.internal.HelpCommandHandler"
            id="org.franca.connectors.ara.console.commands.help"
            name="Console Help">
         <options>
            <option
                  argCount="0"
                  description="display help of available console commands"
                  hasOptionalArg="false"
                  id="org.franca.connectors.ara.console.options.help"
                  longName="help"
                  required="true"
                  shortName="h">
            </option>
         </options>
      </command>
      <command
            class="org.franca.connectors.ara.console.internal.VersionCommandHandler"
            id="org.franca.connectors.ara.console.commands.versionInfo"
            name="Version Information">
         <options>
            <option
                  argCount="0"
                  description="print code generator version"
                  hasOptionalArg="false"
                  id="org.franca.connectors.ara.console.options.version"
                  longName="version"
                  required="true"
                  shortName="v">
            </option>
            <optionGroup
                  id="org.franca.connectors.ara.console.optionGroups.version"
                  required="false">
               <option
                     argCount="0"
                     description="print code generator and plug-in versions"
                     hasOptionalArg="false"
                     id="org.franca.connectors.ara.console.options.pluginVersions"
                     longName="all"
                     required="false"
                     shortName="a">
               </option>
               <option
                     argCount="0"
                     description="print plug-in versions"
                     hasOptionalArg="false"
                     id="org.franca.connectors.ara.console.options.allVersions"
                     longName="plugins"
                     required="false"
                     shortName="p">
               </option>
            </optionGroup>
         </options>
      </command>
   </extension>
</plugin>
